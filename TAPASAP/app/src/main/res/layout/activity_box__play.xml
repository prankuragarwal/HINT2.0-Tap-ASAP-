<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_box__play"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="asap.tapasap.Box_Play">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/box_closed"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView7" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/box_open"
        android:id="@+id/imageView8"
        android:adjustViewBounds="true"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/imageView7"
        android:layout_alignStart="@+id/imageView7" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box1"
        android:id="@+id/imageView9"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box2"
        android:id="@+id/imageView10"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView11" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box3"
        android:id="@+id/imageView11"
        android:layout_above="@+id/imageView8"
        android:layout_toEndOf="@+id/imageView19" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box1"
        android:id="@+id/imageView15"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView9" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box3"
        android:id="@+id/imageView17"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/imageView15" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box2"
        android:id="@+id/imageView16"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box4"
        android:id="@+id/imageView12"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box5"
        android:id="@+id/imageView13"
        android:layout_alignTop="@+id/imageView8"
        android:layout_toStartOf="@+id/imageView14" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box6"
        android:id="@+id/imageView14"
        android:layout_below="@+id/imageView15"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box8"
        android:id="@+id/imageView19"
        android:layout_below="@+id/imageView11"
        android:layout_alignEnd="@+id/imageView8" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box5"
        android:id="@+id/imageView18"
        android:layout_below="@+id/imageView9"
        android:layout_toStartOf="@+id/imageView19" />

    <TextView
        android:text="SELECT YOUR ANSWER"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageView7"
        android:layout_alignStart="@+id/imageView18" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box12"
        android:id="@+id/imageView22"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/imageView15" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box11"
        android:id="@+id/imageView21"
        android:layout_alignTop="@+id/imageView22"
        android:layout_toEndOf="@+id/imageView20" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/box10"
        android:id="@+id/imageView20"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
