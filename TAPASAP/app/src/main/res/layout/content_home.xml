<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="asap.tapasap.Home"
    tools:showIn="@layout/app_bar_home">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/yellow_circle_img"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/imageView5"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/purple_circle_img"
        android:id="@+id/imageView6"
        android:layout_marginTop="72dp"
        android:layout_alignTop="@+id/imageView1"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/blue_circle_img"
        android:id="@+id/imageView5"
        android:layout_marginTop="61dp"
        android:layout_marginStart="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/black_circle_img"
        android:id="@+id/imageView1"
        android:layout_alignTop="@+id/imageView3"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="89dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/red_circle_img"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/imageView6"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@mipmap/green_circle"
        android:id="@+id/imageView4"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
